<div id="infos-<%= work.id %>" class="modal">
	<div class="modal-content w3-card animate-top">
		<div id="infos-header">
			<button id="close-infos-<%= work.id %>" type="button" class="btn close-infos-btn">&times;</button>
			<p><%- work.authorDisplay %></p>
			<p class="text-uppercase"><%- work.title %></p>
		</div>
		<div>
			  <p><b>Titre : </b><%- work.title %></p>
			  <% if(work.subtitle1) {%>
				<p><b>Sous-titre : </b><%- work.subtitle1 %></p>
			  <%}%>
			  <% if(work.subtitle2) {%>
				<p><b>Sous-sous-titre : </b><%- work.subtitle2 %></p>
			  <%}%>
			  <p><b>Année de parution : </b><%- work.year %></p>
			  <% if(work.authors.length > 1) {%>
					<p>
						<span><b>Auteurs :</b></span>
						<br>
						<ul>
						<% for(var j=0; j<work.authors.length; j++) {%>
							<li>
								<%- work.authors[j].name %> (<%- work.authors[j].birth %>&nbsp;&ndash; <%- work.authors[j].death %>)
							</li>
						<%}%>
						</ul>
					</p>
			  <%} else if(work.authors.length === 1) {%>
					<p><b>Auteur : </b><%- work.authors[0].name %> (<%- work.authors[0].birth %>&nbsp;&ndash; <%- work.authors[0].death %>)</p>
			  <%}%>
			  <% if(work.contribs.length > 1) {%>
					<p>
						<span><b>Contributions :</b></span>
						<br>
						<ul>
						<% for(var j=0; j<work.contribs.length; j++) {%>
							<li>
								<span class="contrib-role"><%- work.contribs[j].role %> : </span>
								<%- work.contribs[j].name %> (<%- work.contribs[j].birth %>&nbsp;&ndash; <%- work.contribs[j].death %>)
							</li>
						<%}%>
						</ul>
					</p>
			  <%} else if(work.contribs.length === 1) {%>
					<p>
						<span><b>Contribution : </b></span>
						<br>
						<ul>
							<li>
								<span class="contrib-role"><%- work.contribs[0].role %> : </span>
								<%- work.contribs[0].name %> (<%- work.contribs[0].birth %>&nbsp;&ndash; <%- work.contribs[0].death %>)
							</li>
						</ul>
					</p>
			  <%}%>
			  <p class="book-source"><b>Source : </b>
				  <ul>
					  <li>&Eacute;diteur : <%- work.source.publisher %></li>
					  <li>Année de parution : <%- work.source.year %></li>
				  </ul>
			  </p>
			  <% if(work.description) {%>
			  <div><%- work.description %></div>
			  <%}%>
		</div>
	</div>
</div>
