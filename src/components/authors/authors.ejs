<div id="authors-container" class="fade">
	<div id="top-page-header">auteurs</div>
	<div id="authors-list">
		<div id="letters">
			<%- include src/components/authors/authors-letters.ejs -%>
		</div>
		<div>
			
			<% if(authors.length===0) {%>
				<p id="noresult">aucun résultat.</p>
			<%}%>
			
			<% for(var i=0; i<authors.length; i++) {%>
				<% if(authors[i].visible) { %>
				<div class="auth" id="auth_<%= i %>">
					<button id="<%= authors[i].id %>" class="accordion"><%- authors[i].name %>&ensp;(<%- authors[i].works.length %>)</button>
					<div class="books-list">
					<% for(var j=0; j<authors[i].works.length; j++) {%>
						<% var work = authors[i].works[j] %>
						
						<!-- MODAL (INFOS) -->
						<%- include src/components/authors/infos-modal.ejs -%>
						
						<div class="book-item" id="book_<%= work.id %>">
							<div id="paper" style="background-color: <%- work.styles.color %>; background-image: url(<%- work.styles.image %>)">
								<div id="<%= work.id %>" class="book" style="<%= work.styles.cover %>">
									<p class="author" style="<%=work.styles.author %>"><%- work.authorDisplay %></p>
									<p class="title" style="<%-work.styles.title %>">
										<%- work.title %>
									</p>
									<% if(work.subtitle1) {%>
									<p class="subtitle1" style="<%= work.styles.subtitle1 %>">
										<%- work.subtitle1 %></a>
									</p>
									<% } %>
									<% if(work.subtitle2) {%>
									<p class="subtitle1" style="<%= work.styles.subtitle2 %>">
										<%- work.subtitle2 %></a>
									</p>
									<% } %>
									<div class="logo" style="<%=work.styles.logo %>">
										<p class="span1">&#8916;</p>
										<p class="span2">équivoques</p>
									</div>
							   </div>
						   </div>
						   <div id="book-btns" >
								<% if(!work.visible) {%>
									<button class="tobepublished btn">&Agrave; paraître</button>
								<%}%>
								<button id="open-infos-<%= work.id %>" class="open-infos-btn btn" >Fiche</button>
						   </div>
						</div>
					
					<%}%>
					</div>
				</div>
				<% } %>
			<% } %>
			
		</div>
	</div>
	<!-- FOOTER -->
	<%- include src/components/footer.ejs -%>
</div>
