<div id="adminAuthors" class="content">
	<h4 class="align-left w3-container w3-padding-16">Auteurs</h4>
	<p class="align-right w3-padding-16"><a href="/#/admin/authors/new" class="w3-text-gray w3-hover-none w3-hover-text-black">Ajouter</a></p>
	<div style="clear:both">
		<span class="error"><%= error %></span>
		<ul id="authors-list" class="w3-ul">
			<% for(var i=0; i<authors.length; i++) {%>
			<li>
				<p id="<%= authors[i].id %>">
					<a href="/#/admin/authors/<%= authors[i].id %>" class='w3-text-gray w3-hover-none w3-hover-text-black'>
						<%= authors[i].firstName %> <%= authors[i].name %> (<%= authors[i].birth %>&thinsp;&ndash;&thinsp;<%= authors[i].death %>)
					</a>
				</p>
			</li>
			<% } %>
		</ul>
	</div>
</div>
