<div id="adminAuthors" class="content">
	<p class="padding-16 align-left"><b>Auteurs (<%= authors.length %>)</b></p>
	<p class="padding-16 align-right"><a href="/#/admin/authors/new">Ajouter</a></p>
	<div style="clear:both">
		<span class="error"><%= error %></span>
		<ul id="authors-list" class="ul" style="padding: 0px;">
			<% for(var i=0; i<authors.length; i++) {%>
			<li>
				<p>
					<a href="/#/admin/authors/<%= authors[i].id %>">
						<%- authors[i].name %> (<%= authors[i].birth %>&thinsp;&ndash;&thinsp;<%= authors[i].death %>)
					</a>
				</p>
			</li>
			<% } %>
		</ul>
	</div>
</div>
