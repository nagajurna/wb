<div id="home-container">
	<div id="top-page-header">nouveautés</div>
	<div id="booksList-container">
		<div id="booksList">

			<% for(var i=0; i<books.length; i++) {%>
				
				<!-- MODAL (INFOS) -->
				<%- include src/components/home/infos-modal.ejs -%>
				
				<div class="slide fade" id="slide_<%= books[i].id %>">
					<div id="paper" style="background-color: <%- books[i].styles.color %>; background-image: url(<%- books[i].styles.image %>)">
						<div id="<%= books[i].id %>" class="book" style="<%= books[i].styles.cover %>">
							<p class="author" style="<%=books[i].styles.author %>"><%- books[i].authorDisplay %></p>
							<p class="title" style="<%-books[i].styles.title %>">
								<%- books[i].title %>
							</p>
							<% if(books[i].subtitle1) {%>
							<p class="subtitle1" style="<%= books[i].styles.subtitle1 %>">
								<%- books[i].subtitle1 %></a>
							</p>
							<% } %>
							<% if(books[i].subtitle2) {%>
							<p class="subtitle1" style="<%= books[i].styles.subtitle2 %>">
								<%- books[i].subtitle2 %></a>
							</p>
							<% } %>
							<p class="logo" style="<%=books[i].styles.logo %>">
								<span class="span1">Le Singulier</span><br/>
								<span class="span2">éditions</span>
							</p>
					   </div>
				   </div>
				   <div id="book-btns" >
						<button id="open-infos-<%= books[i].id %>" class="open-infos-btn btn" >Fiche</button>
				   </div>
				</div>
				
			<% } %>
			<div id="dots">
				<span class="dot"></span>
				<span class="dot"></span>
				<span class="dot"></span>
				<span class="dot"></span>
				<span class="dot"></span>
				<span class="dot"></span>
			</div>
			<button id="previous" type="button" class="btn">&lt;</button>
			<button id="next" type="button" class="btn">&gt;</button>
		</div>
	</div>
</div>
