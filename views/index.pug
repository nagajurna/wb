extends layout

block content
  #nav-bar-top(class='w3-bar w3-white w3-border-bottom w3-large')
    a(href='/', class='w3-bar-item w3-btn')=title
 
  div(class='w3-container w3-padding-24' id='main')
    ul(class='w3-ul' id='books')
      each book in books
        li
          span #{book.author}&ensp;&ndash;&ensp;
          a(href=book.path) !{book.title}

block javascript
  script(src='/javascripts/main.js')
